<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/category_store_card"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardCornerRadius="14dp"
            tools:ignore="MissingConstraints">
                <ImageView
                    android:id="@+id/category_store_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/shopping_selector"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/category_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GS24 면목 4동점"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_store_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>